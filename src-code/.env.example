# Environment Variables Template
# Copy this file to .env.local and fill in your values

# Backend API Configuration
NEXT_PUBLIC_API_URL=http://localhost:8000/api

# GitHub Integration
GITHUB_TOKEN=your_github_personal_access_token_here
GITHUB_USERNAME=your_github_username
GITHUB_REPO_OWNER=your_github_username

# Contact Form Configuration
SMTP_HOST=smtp.ionos.com
SMTP_PORT=587
CONTACT_SENDER_EMAIL=no_reply@lukeedwards.me
CONTACT_SENDER_PASSWORD=your_ionos_password
CONTACT_NOTIFICATION_EMAIL=edwards.lukec@gmail.com

# Cloudflare Turnstile
NEXT_PUBLIC_TURNSTILE_KEY=your_turnstile_site_key
TURNSTILE_SECRET_KEY=your_turnstile_secret_key

# Google Sheets Integration
GOOGLE_SHEETS_SHEET_ID=your_google_sheet_id
GOOGLE_SERVICE_ACCOUNT_EMAIL=your-service-account@project-id.iam.gserviceaccount.com
GOOGLE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"

# Redis (Upstash KV)
LUKE_KV_KV_REST_API_URL=https://your-redis.upstash.io
LUKE_KV_KV_REST_API_TOKEN=your_redis_token

# Analytics (Optional)
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
VERCEL_ANALYTICS_ID=your_vercel_analytics_id

# Database (if using external database)
DATABASE_URL=your_database_connection_string

# Security
NEXTAUTH_SECRET=your_nextauth_secret_key
NEXTAUTH_URL=http://localhost:3000

# API Keys (if needed)
OPENAI_API_KEY=your_openai_api_key_for_content_generation