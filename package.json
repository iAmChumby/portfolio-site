{
  "name": "portfolio-site",
  "version": "1.0.0",
  "description": "Full-stack portfolio site with Next.js frontend and Node.js backend",
  "private": true,
  "workspaces": [
    "src-code",
    "backend"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "cd src-code && npm run dev",
    "dev:backend": "cd backend && npm run dev",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "cd src-code && npm run build",
    "build:backend": "echo \"Backend build complete - no build step required\"",
    "start": "concurrently \"npm run start:frontend\" \"npm run start:backend\"",
    "start:frontend": "cd src-code && npm run start",
    "start:backend": "cd backend && npm run start",
    "test": "npm run test:frontend && npm run test:backend",
    "test:frontend": "cd src-code && npm run test",
    "test:backend": "cd backend && npm run test",
    "test:watch": "concurrently \"npm run test:watch:frontend\" \"npm run test:watch:backend\"",
    "test:watch:frontend": "cd src-code && npm run test:watch",
    "test:watch:backend": "cd backend && npm run test:watch",
    "test:coverage": "npm run test:coverage:frontend && npm run test:coverage:backend",
    "test:coverage:frontend": "cd src-code && npm run test:coverage",
    "test:coverage:backend": "cd backend && npm run test:coverage",
    "lint": "npm run lint:frontend && npm run lint:backend",
    "lint:frontend": "cd src-code && npm run lint",
    "lint:backend": "cd backend && npm run lint",
    "lint:fix": "npm run lint:fix:frontend && npm run lint:fix:backend",
    "lint:fix:frontend": "cd src-code && npm run lint",
    "lint:fix:backend": "cd backend && npm run lint:fix",
    "type-check": "cd src-code && npm run type-check",
    "install:all": "npm install && cd src-code && npm install && cd ../backend && npm install",
    "clean": "npm run clean:frontend && npm run clean:backend",
    "clean:frontend": "cd src-code && rimraf .next node_modules",
    "clean:backend": "cd backend && rimraf node_modules"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "rimraf": "^5.0.5"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "keywords": [
    "portfolio",
    "nextjs",
    "nodejs",
    "fullstack",
    "github-integration"
  ],
  "author": "Your Name",
  "license": "MIT"

}
